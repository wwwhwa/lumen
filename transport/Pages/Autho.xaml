<Page x:Class="transport.Pages.Autho"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:transport.Pages"
        mc:Ignorable="d"
        Title="Autho" Height="450" Width="800" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="260">
            <TextBlock Text="login:"/>
            <TextBox x:Name="tbxLogin"/>
            <TextBlock Text="password:"/>
            <PasswordBox x:Name="pasboxPassword"/>
            <StackPanel Orientation="Horizontal" Height="80" HorizontalAlignment="Center" Width="260">
                <Button x:Name="btnRegister" Margin="5,15,5,5" Content="register"  Click="btnRegister_Click"/>
                <Button x:Name="btnLog" Margin="5,15,5,5" Content="log in" Click="btnLog_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
